<% portfolio = [
    { name:"International Safety Systems", category:"Link", path:"https://www.internationalsafety.com"},
    { name:"Spire-Ruby", category:"Link", path:"https://github.com/bitesite/spire-ruby"},
    { name:"MusicForever (DJ. Ollggie)", category:"Link", path:"https://www.musicforever.bz/"},
    { name:"WatsPoppin", category:"Link", path:"https://github.com/Dujota/watspoppin"},
    { name:"Neighbourly", category:"Link", path:"https://github.com/Dujota/neighborly"},
    { name:"Aeya Studios", category:"Link", path:"http://www.aeya.ca/"},
  ] %>
<%# Portfolio %>
<div id="portfolio-items">
  <% portfolio.each do |proj| %>
    <div class="list-item">
      <%# portfolio link %>
      <a class="portfolio-link" href="<%= proj[:path]%>" target="_blank" rel="noopener noreferrer">
        <div class="item-image"></div>
        <div class="item-category"><%= proj[:category] %> </div>
        <div class="item-name"><span><%= proj[:name] %></span></div>
      </a>
    </div>
  <% end %>
</div>
